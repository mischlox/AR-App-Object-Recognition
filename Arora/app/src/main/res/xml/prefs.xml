<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <PreferenceCategory
    android:title="@string/settings_training">
        <SeekBarPreference
            android:key="@string/key_seekbar"
            android:title="@string/settings_num_samples"
            android:summary="@string/settings_hint_num_samples"
            android:defaultValue="50"
            app:min="25"
            android:max="125"
            app:showSeekBarValue="true"
            android:icon="@drawable/ic_num_samples"/>
        <SeekBarPreference
            android:key="key_countdown"
            android:title="Training Countdown"
            android:summary="@string/countdown_summary"
            android:defaultValue="5"
            app:min="1"
            android:max="20"
            android:icon="@drawable/ic_countdown"
            app:showSeekBarValue="true"/>
        <SeekBarPreference
            android:key="@string/key_resolution"
            android:title="@string/settings_resolution"
            android:summary="@string/settings_resolution_hint"
            android:defaultValue="1"
            app:min="0"
            android:max="2"
            android:icon="@drawable/ic_resolution"/>

    </PreferenceCategory>
    <PreferenceCategory
        android:title="@string/settings_misc">
        <SwitchPreference
            android:key="@string/key_nightmode"
            android:title="@string/nightmode"
            android:summaryOn="@string/nightmode_enabled"
            android:summaryOff="@string/nightmode_disabled"
            android:icon="@drawable/ic_darkmode"/>
    </PreferenceCategory>
        <Preference
            android:key="@string/key_reset"
            android:title="@string/reset_app"
            android:summary="@string/reset_app_summary"
            android:icon="@drawable/ic_delete"/>
<!--    Add more prefs as a workaround to make it possible to scroll further down-->
        <Preference android:selectable="false"></Preference>
        <Preference android:selectable="false"></Preference>
</PreferenceScreen>