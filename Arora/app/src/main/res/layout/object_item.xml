<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:padding="16dp">
    <ImageView
        android:elevation="50dp"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@mipmap/ic_launcher"
        android:id="@+id/list_image_preview"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="20dp">

        <TextView
            android:id="@+id/list_object_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/object_name"
            android:textStyle="bold"
            android:layout_margin="5dp"
            android:textSize="20sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:id="@+id/list_object_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/dialog_hint_object_type"
            android:textStyle="bold"
            android:layout_margin="5dp"
            android:textSize="15sp"
            app:layout_constraintTop_toBottomOf="@id/list_object_name"
            app:layout_constraintLeft_toLeftOf="parent"/>
        <TextView
            android:id="@+id/list_object_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="date"
            android:textSize="12sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/list_object_additional_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/dialog_hint_object_additional_data"
            android:textStyle="bold"
            android:layout_margin="5dp"
            android:textSize="12sp"
            app:layout_constraintTop_toBottomOf="@id/list_object_type"
            app:layout_constraintLeft_toLeftOf="parent"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent">

        <ImageButton
            android:id="@+id/list_edit_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_edit"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <ImageButton
            android:id="@+id/list_delete_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_delete"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>

</LinearLayout>